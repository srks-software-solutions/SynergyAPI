@{
    ViewBag.Title = "OrderGeneratedParticularDates";
}

<script src="~/Content/bootstrap/js/bootstrap-datepicker.js"></script>
<link href="~/Content/bootstrap/css/datepicker.css" rel="stylesheet" />

<div class="bcgr" style="min-height: 580px">
    @using (Html.BeginForm("OrdersGeneratedWithDateRange", "LeadEnquiry", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div style="background: gray; padding-bottom: 15px">
            <p class="txtft">Previous Generated Orders</p>
        </div>
        <div class="row" style="padding-top: 10px">
            <div class=" row show-grid">
                <div class="span10 pad">
                    <div class="span3" style="padding-left: 70px">
                        <div class="control-group">
                            <label class="control-label fntst">From Date :</label>
                            <div class="controls">
                                <input type="text" class="fntst sss" id="fromdat" name="fromdat" value="" placeholder="Select From Date" required="required">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span10 pad">
                    <div class="span3" style="padding-left: 70px">
                        <div class="control-group">
                            <label class="control-label fntst">To Date :</label>
                            <div class="controls">
                                <input type="text" class="fntst sss" id="todat" name="todat" value="" placeholder="Select To Date" required="required">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="span10 pad ">
            <div class="span3 cent" style="padding-left: 70px">
                <button class="btn btn-success" value="Create" type="Submit">Get Orders</button>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var now = new Date();
        var today = now.getDate() + '/' + (now.getMonth() + 1) + '/' + now.getFullYear();
        $('.sss').datepicker({
            format: 'dd/mm/yyyy',
            onRender: function (date) {
                return date.valueOf() > now.valueOf() ? 'disabled' : '';
            }
        }).on('changeDate', function (ev) {
            $(this).datepicker('hide');
        });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

