@model  SRKSSynergy.Models.MachineInventory

@{
	ViewBag.Title = "Delete Machine";
}



<div class="bcgr" id="mrefresh" style="min-height: 590px">
	@using (Html.BeginForm())
	{
		<div style="background: gray; padding-bottom: 15px">
			<p class="txtft">Delete Machine</p>
		</div>
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(false)
		@Html.HiddenFor(m => m.CPID)
		//@Html.HiddenFor(m => m.MachineInventoryID)
	//	@Html.HiddenFor(m => m.MachineSerialNo)
		@Html.HiddenFor(m => m.MDBID)
		@Html.HiddenFor(m => m.PlaceStocked)
		//@Html.HiddenFor(m => m.ProductModelID)
     	//@Html.HiddenFor(m => m.ProductModel.ProductModelName)
		@Html.HiddenFor(m => m.Remarks)
		@Html.HiddenFor(m => m.Type)
	    @Html.HiddenFor(m => m.IsDispatched)
		@Html.HiddenFor(m => m.IsDeleted)
		@Html.HiddenFor(m => m.CustomerName)

		@*<p class="txtft">Are you sure you want to Deactivate this?</p>*@
		<div class="row">
			<div class=" row show-grid">
				<div class="span12 pad">
					<p class="pad txtal" style="padding-bottom:30px">Are you sure you want to Discontinue this Product?</p>
					<div class="span3" style="padding-left:40px">
						<div class="control-group">
							<label class="control-label fntst"><strong>Machine Serial No:</strong></label>
							<div class="controls">
								@Html.DisplayFor(model => model.MachineSerialNo)
							</div>
						</div>
					</div>
					<div class="span3">
						<div class="control-group">
							<label class="control-label fntst"><strong>Product Name:</strong></label>
							<div class="controls">
								@Html.DisplayFor(model => model.ProductModel.ProductModelName)
							</div>
						</div>
					</div>
					@*<div class="span3">
						<div class="control-group">
							<label class="control-label fntst">Email-ID:</label>
							<div class="controls">
								@Html.DisplayFor(model => model.email)
							</div>
						</div>
					</div>*@
				</div>
				@* Buttons *@
				<div class="row" style="padding-top: 20px; padding-left: 300px; padding-bottom: 20px">
					<div class=" row show-grid">
						<div class="span10">
							<div class="span3 cent1">
								<input type="submit" name="Yes" value="Yes" class="btn btn-success" />
								<input type="submit" name="No" value="No" class="btn btn-success" />
							</div>
						</div>
					</div>
				</div>
				@* End of Buttons *@
			</div>
		</div>
	}
</div>

