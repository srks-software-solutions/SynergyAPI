                        });
                        $("#tid").html(opdsgn + addopdsgn)
                    }
                })
            });

        </script>
        <script >
            function addclick() {
                $("#add").show();
                $("#update").hide();
                $("#gname").val('');
                $("#gsname").val('');
                $("#gid").val(0);
                $("#pcid").val(0);
                $("#psid").val(0);
                $("#tid").val(0);
            }
            function addgtyp() {
                $("#add").show();
                $("#update").hide();
                var gname = $("#gname").val();
                var gsname = $("#gsname").val();
                var gid = $("#gid").val();
                var pcid = $("#pcid").val();
                var psid = $("#psid").val();
                var tid = $("#tid").val();
                var promid =$("#gid").val();
                if (gname == "") {
                    $("#snackbar").html('Please fill all the feilds');
                    myFunction();
                    return false;
                }
                else {
                    $("#close").click();
                    var data = {};
                    data.cname = gname;
                    data.gid = gid;
                    data.pcid = pcid;
                    data.psid = psid;
                    data.tphid = tid;
                    data.promid = promid;
                    $.ajax({
                        url: '/OCMMaster/OCMCapacityKWAdd',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(data),
                        // dataType: 'json',
                        success: function (data) {
                            //On ajax success do this
                            $("#snackbar").html('Sucessfully added');
                            myFunction();
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            //On error do this
                            if (xhr.status == 200) {

                                alert(ajaxOptions);
                            }
                            else {
                                alert(xhr.status);
                                alert(thrownError);
                            }
                        }
                    });

                    return true;
                }

            }
            function editgtyp(val) {

                var id = $(val).attr('id');
                id = id.split(' ');
                var gid = id[0];
                $("#hdn_id").val(gid);
                $("#add").hide();
                $("#update").show();
                $('#myModal').modal('show');

                var data = {};
                data.cid = gid;
                $.ajax({
                    url: '/OCMMaster/OCMCapacityKWShow',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    // dataType: 'json',
                    success: function (data) {
                        var res = data.split("%");

                        $("#gname").val(res[0]);
                        $("#gid").val(res[1]);
                        $("#gid").trigger("change");
                        setTimeout(function () {
                            $('#pcid').val(res[2]);
                            $('#pcid').trigger("change");
                        }, 500);
                        setTimeout(function () {
                            $("#psid").val(res[3]);
                        }, 700);
                        setTimeout(function () {
                            $("#psid").trigger("change");
                        }, 900);
                        setTimeout(function () {

                            $("#gid").val(res[5]);
                        }, 1000);
                        $("#tid").val(res[4]);

                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        //On error do this
                        if (xhr.status == 200) {

                            alert(ajaxOptions);
                        }
                        else {
                            alert(xhr.status);
                            alert(thrownError);
                        }
                    }
                });
                return false;
            }
            function updategtyp() {
                $("#add").show();
                $("#update").hide();
                var cid = $("#hdn_id").val();
                var gname = $("#gname").val();
                var gsname = $("#gsname").val();
                var gid = $("#gid").val();
                var pcid = $("#pcid").val();
                var psid = $("#psid").val();
                var tid = $("#tid").val();
                var promid = $("#gid").val();
                if (gname == "" ) {
                    $("#snackbar").html('Please fill all the feilds');
                    myFunction();
                    return false;
                }
                else {
                    $("#close").click();
                    var data = {};
                    data.gid = gid;
                    data.pcid = pcid;
                    data.paid = psid;
                    data.tpid = tid;
                    data.cid = cid;
                    data.pname = gname;
                    data.promid = promid;
                    $.ajax({
                        url: '/OCMMaster/OCMCapacityKWUpdate',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(data),
                        // dataType: 'json',
                        success: function (data) {
                            //On ajax success do this
                            $("#snackbar").html('Sucessfully Updated');
                            myFunction();
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            //On error do this
                            if (xhr.status == 200) {

                                alert(ajaxOptions);
                            }
                            else {
                                alert(xhr.status);
                                alert(thrownError);
                            }
                        }
                    });

                    return true;
                }
            }
            function delgtyp(val) {
                var id = $(val).attr('id');
                id = id.split(' ');
                var gid = id[0];
                $("#hdn_id").val(gid);
                $("#add").hide();
                $("#update").show();

                var data = {};
                data.cid = gid;
                $.ajax({
                    url: '/OCMMaster/OCMCapacityKWDelete',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    // dataType: 'json',
                    success: function (data) {
                        $("#snackbar").html('Sucessfully Deleted');
                        myFunction();
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        //On error do this
                        if (xhr.status == 200) {

                            alert(ajaxOptions);
                        }
                        else {
                            alert(xhr.status);
                            alert(thrownError);
                        }
                    }
                });
            }
    </script>
