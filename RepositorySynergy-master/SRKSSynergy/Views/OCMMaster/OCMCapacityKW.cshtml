            function callmodel() {
                $("#gid").html('');
                var gid = $("#psid").val();
                var temp = $("#psid option:selected").text();
                temp = temp.split('-');
                var name = temp[0];
                var opdsgn = '<option value="0">--select--</option>';
                var addopdsgn = '';

                $.ajax({
                    url: "/OCMMaster/AutocompleteModel",
                    type: "POST",
                    dataType: "json",
                    data: {'name':name},
                    success: function (data) {
                        //alert(1)
                        $.each(data, function (i, v) {
                            addopdsgn = addopdsgn + '<option value="' + v.ProductModelID + '"> ' + v.ProductModelName + ' </option>';

                        });
                        //alert(addopdsgnf)
                        $("#gid").html(opdsgn + addopdsgn)
                    }
                })
            }
            function callpass() {
                $("#psid").html('');
                pid = $("#pcid").val();
                var opdsgn = '<option value="0">--select--</option>';
                var addopdsgn = '';
                $.ajax({
                    url: "/OCMMaster/AutocompleteOCMPassFullPath",
                    type: "POST",
                    dataType: "json",
                    data: { 'pid': pid },
                    success: function (data) {

                        $.each(data, function (i, v) {
                            addopdsgn = addopdsgn + '<option value="' + v.PassId + '"> ' + v.PathName + ' </option>';
                        });
                        $("#psid").html(opdsgn + addopdsgn)
                    }
                })
            }
            $(document).ready(function () {
