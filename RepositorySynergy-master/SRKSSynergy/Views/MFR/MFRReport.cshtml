							</div>
						</td>
						<td >
							<div>
								<label class="fntstrep">@Model.ChannelPartner</label>
							</div>
						</td>
						<td >
							<div style="text-align: left; vertical-align: middle;">
								<label><strong>Date :</strong></label>
							</div>
						</td>
						<td>
							<div>
								<label class="fntstrep">@Model.MfrDate</label>
							</div>
						</td>
					</tr>
				</div>
			</table>
		</div>
		@* Customer Data *@
		<div style="padding-left: 40px;padding-bottom:30px;">
			<table class="table " style="width: 1075px; padding-left: 30px;">
				<div class="controls-row">
					<tr>
						<td class="span2" colspan="4">
							<div style="text-align: left; vertical-align: middle;padding-bottom:7px">
								<label><strong>Customer Data : </strong></label>
							</div>
						</td>
					</tr>
					<tr>
						<td class="span2">
							<div style="text-align: left; vertical-align: middle;">
								<label><strong>Company :</strong></label>
							</div>
						</td>
						<td class="span3">
							<div>
								@*<input type="text" class="fntst" id="cmpynm" placeholder="Company Name" readonly="readonly" value="@ViewBag.Company">*@
								<label class="fntstrep">@Model.OrganizationName</label>
							</div>
						</td>
						<td class="span2">
							<div style="text-align: left; vertical-align: middle;">
								<label><strong>City :</strong></label>
							</div>
						</td>
						<td class="span3">
							<div>
								@*<input type="text" class="fntst" id="city" placeholder="City" readonly="readonly" value="@ViewBag.City">*@
								<label class="fntstrep">@Model.City</label>
							</div>
						</td>
					</tr>
					<tr>
						<td class="span2">
							<div style="text-align: left; vertical-align: middle;">
								<label><strong>Contact :</strong></label>
							</div>
						</td>
						<td class="span3">
							<div>
								@*<input type="text" class="fntst" id="cont" placeholder="Contact Person Name" readonly="readonly" value="@ViewBag.Contact">*@
								<label class="fntstrep">@Model.ContactPersonName</label>
							</div>
						</td>
						<td class="span2">
							<div style="text-align: left; vertical-align: middle;">
								<label><strong>Mobile/Tel No :</strong></label>
							</div>
						</td>
						<td class="span3">
							<div>
								@*<input type="text" class="fntst" id="mob/tel" placeholder="Mobile/Tel No" readonly="readonly" value="@ViewBag.Phone">*@
								<label class="fntstrep">@Model.Mobile</label>
							</div>
						</td>
					</tr>
				</div>
			</table>
		</div>
		@* Machine Data *@
		<div style="padding-left: 40px;padding-bottom:30px;">
			<table class="table " style="width: 800px; padding-left: 30px;">
				<div class="controls-row">
					<tr>
						<td class="span2" colspan="4">
							<div style="text-align: left; vertical-align: middle;padding-bottom:7px">
								<label><strong>Machine Data : </strong></label>
							</div>
						</td>
					</tr>
					<tr>
						<td class="span2">
							<div style="text-align: left; vertical-align: middle;">
								<label><strong>Model :</strong></label>
							</div>
						</td>
						<td class="span3">
							<div>
								@*@Html.DropDownListFor(m => m.MFR.MfrModelNo,(IEnumerable<SelectListItem>)ViewBag.Product, "--Select--", new {@id="ProductModelID1",@required ="required" })*@
								<label class="fntstrep">@Model.Modelno</label>
								@*<input type="text" class="fntst" id="model" placeholder="Model" readonly="readonly" value="@ViewBag.EModel">*@
							</div>
						</td>
						<td class="span2">
							<div style="text-align: left; vertical-align: middle;">
								<label><strong>M/c's Sl no :</strong></label>
