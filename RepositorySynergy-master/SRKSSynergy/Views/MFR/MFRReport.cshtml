				</div>
			</table>
		</div>
		@* Parts Needs to be replaced *@
		<div style="padding-left: 40px;padding-bottom:30px;">
			<table class="table" style="width: 800px; padding-left: 30px;padding-top:40px">
				<div class="controls-row">
					<tr>
						<td colspan="4">
							<div style="text-align: left; vertical-align: middle;padding-bottom:10px">
								<label>
									<strong>Parts that needs to be replaced : </strong>
								</label>
							</div>
						</td>
					</tr>
					<tr>
						<td style="width: 50px;  text-align: center;"><label style="text-align:center">SL No</label></td>
						<td style="width: 50px;  text-align: center;"><label style="text-align:center">Qty</label></td>
						<td style="width: 130px; text-align: center;"><label style="text-align:center">Part Number</label></td>
						<td style="width: 250px; text-align: center;"><label style="text-align:center">Description</label></td>
					</tr>
				</div>
			</table>
			<table class="table" style="width: 800px;">
				<div class="controls-row">
					@{int slno = 0;}
					@foreach (var item in Model.MFRParts)
					{
						slno++;
						<table style="width: 800px;padding-left: 30px; ">
							<tr>
								<td style="width: 50px;text-align:center" class="fntstrep">
									<strong>@slno</strong>
								</td>
								<td style="width: 50px">
									<label class="fntstrep" style="text-align:center;padding-left:30px"><strong>@item.Quantity</strong></label>
								</td>
								<td style="width: 130px;">
									<label class="fntstrep" style="text-align:center;padding-left:40px"><strong>@item.ProductModelSpare.ProductModelSparesName</strong></label>
								</td>
								<td style="width: 250px;text-align:center">
									<label class="fntstrep" style="text-align:center"><strong>@item.ModelDesc</strong></label>
								</td>
							</tr>
						</table>
					}
					<tr>
						<td colspan="3">
							<div style="text-align: left; vertical-align: middle;padding-left: 30px;padding-top:200px">
								<label>
									Signature of the sender : 
								</label>
							</div>
						</td>
						<td>
							<label></label>
						</td>
					</tr>
				</div>
			</table>
		</div>
