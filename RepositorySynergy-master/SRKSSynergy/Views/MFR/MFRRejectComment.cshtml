@model  SRKSSynergy.Models.MFR
@*@using SRKSSynergy.Helpers*@
@{
	ViewBag.Title = "MFR Reject Comment";
	Layout = null;
}
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/css/MDB.css" rel="stylesheet" />
	<script src="~/Content/bootstrap/js/jquery-1.9.1.min.js"></script>
	<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>

	@Scripts.Render("~/bundles/modernizr")
<div style="background: #e5e5e5; min-height: 600px">

	@using (Html.BeginForm("MFRRejectComment", "MFR", Model, FormMethod.Post))
	{
	  
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)
		<div style="background: gray; padding-bottom: 15px">
			<p class="txtft">Rejection Comment</p>
		</div>
		@Html.HiddenFor(model => model.MFRID)
		@Html.HiddenFor(model => model.MfrModelNo)
		@Html.HiddenFor(model => model.MFRNumber)
		@Html.HiddenFor(model => model.MfrTo)
		@Html.HiddenFor(model => model.OrderNum)
		@Html.HiddenFor(model => model.Remedial)
		@Html.HiddenFor(model => model.MfrEnteredBy)
		@Html.HiddenFor(model => model.MfrDate)
		@Html.HiddenFor(model => model.MDBID)
		@Html.HiddenFor(model => model.MacSlNo)
		@Html.HiddenFor(model => model.MacOperatTemp)
		@Html.HiddenFor(model => model.MacBreakDown)
		@Html.HiddenFor(model => model.CPID)
		@Html.HiddenFor(model => model.CommissionedDate)
		@Html.HiddenFor(model => model.CommissionedBy)
		@Html.HiddenFor(model => model.Ask1)
        @Html.HiddenFor(model => model.IsMFR)

		<div class="row" style="padding-top: 10px">
			<div class=" row show-grid">
				<div class="span12 pad ">
					<div class="span3">
						<div class="control-group ">
							<label class="control-label fntst " style="font-size: 18px">Rejection Comment</label>
							<div class="controls ">
								@Html.TextAreaFor(model => model.MFRComment, new { @id = "oarej", @name = "oarej", rows = 4, columns = 20, @style = "width:900px", @placeholder = "Rejection Comments", @required = "required" })
								@Html.ValidationMessageFor(model => model.MFRComment)
								@*<textarea name="oarej" rows="2" cols="4" class="fntst" placeholder="Rejection Comments"></textarea>*@
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row" style="padding-top: 10px">
			<div class=" row show-grid">
				<div class="span12 pad ">
					<div class="span3">
						<div class="controls ">
							<input type="submit" value="Submit" id="sub" class="btn btn-large btn-info" />
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>
@Scripts.Render("~/bundles/jqueryval")	