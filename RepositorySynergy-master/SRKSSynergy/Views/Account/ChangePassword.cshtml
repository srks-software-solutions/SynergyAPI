<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Synergy Application</title>
    @*<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />*@
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/MDB.css" rel="stylesheet" />
</head>
<body>
    @{
        Layout = null;
        ViewBag.Title = "Change Password";
    }

        @model SRKSSynergy.Models.ChangePasswordModel

    <div class="bcgr" style="min-height: 640px">
        @using (Html.BeginForm())
        {
            <div style="background: gray; padding-bottom: 15px">
                <p class="txtft">Change Password</p>
            </div>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="row" style="padding-top: 20px; padding-left: 100px">
                <div class=" row show-grid">
                    @Html.HiddenFor(m => m.UserName)
                                    @Html.HiddenFor(m => m.OldPassword)
                    @Html.HiddenFor(m => m.ID)
                    <div class="span10 pad">
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label fntst">New Password</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.NewPassword, new { @id = "fname", @class = "fntst", @placeholder = "Enter New Password" })
                                    @Html.ValidationMessageFor(m => m.NewPassword)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span10 pad">
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label fntst">Confirm Password</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @id = "fname", @class = "fntst", @placeholder = "Enter Confirm Password" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Buttons*@
                    <div class="span10 pad " style="padding-bottom: 20px">
                        <div class="span3">
                            <input type="submit" value="Change password" class="btn btn-large btn-success" />
                        </div>
                    </div>
                    @*End Of Buttons*@
                </div>
            </div>
    
        }
    </div>
</body>
</html>
