@model IEnumerable<SRKSSynergy.Models.OCMPolisher>

@{
    ViewBag.Title = "Index";
    int slno = 1;
}

<!-- glyphicons help -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

<link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
<link href="~/Content/bootstrap/css/MDB.css" rel="stylesheet" />
<link href="~/Content/bootstrap/css/jquery.ui.autocomplete.css" rel="stylesheet" />
<script src="~/Content/bootstrap/js/jquery.js"></script>
<script src="~/Content/bootstrap/js/jquery-ui.js"></script>
<script src="~/Content/bootstrap/js/jquery1.8.2.min.js"></script>
<script src="~/Content/bootstrap/js/jQuery%20UI%201.9.2.js"></script>

<div class="bcgr" style="min-height:590px;min-width:1410px">
    <div style="background: gray; padding-bottom: 15px">
        <p class="txtft">OCM - Polisher List</p>
    </div>
    <form action="@Url.Action("Index", "OCMPolisher")" method="post">
        @* Create Equipment Link *@
        <div style="padding-left: 20px;padding-top:10px">
            @Html.ActionLink("Add ", "Create", "OCMPolisher", new { @class = "btn btn-primary glyphicon glyphicon-plus", @Style = "text-decoration:none" })
        </div>
            <div style="padding-bottom:1%"></div>

        <table class="table table-hover" style="width: 1410px;">
            <tr style="background: #BBBEBD; padding-bottom: 10px; padding-top: 10px">
                <th style="width: 30px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Serial No.</span>
                </th>
                 <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Model Name</span>
                </th>
                <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Grain Type</span>
                </th>
                 <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Process</span>
                </th>
                <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Pass</span>
                </th>
                <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Capacity</span>
                </th>
                <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Polish Requirement</span>
                </th>
                <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Motor</span>
                </th>
                  <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Motor Type</span>
                </th>
                <th style="width: 120px; text-align: center">
                    <span style="font-family: Calibri; font-size: 18px; padding-bottom: 10px; padding-top: 10px">Motor Rating</span>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 30px; text-align: center; font-family: Calibri; font-size: 18px">
                        @slno
                    </td>
                    <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.ModelName)
                    </td>
                    <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.GrainType)
                    </td>
                    <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.Process)
                    </td>
                    <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.Pass)
                    </td>
                    <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.PolishRequirement)
                    </td>
                    <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.MotorQ)
                    </td>
                     <td style="width: 120px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.MotorType)
                    </td>
                    <td style="width: 150px; text-align: center; font-family: Calibri; font-size: 18px">
                        @Html.DisplayFor(modelItem => item.MotorRating)
                    </td>
                    <td>                        
                        @Html.ActionLink("Edit", "Edit", "OCMPolisher", new { id = item.OPID }, new { @class = "btn btn-primary glyphicon glyphicon-pencil", @Style = "text-decoration:none" }) 
                        
                        @*@Html.ActionLink("Delete", "Delete","OCMPolisher", new { id=item.OPID }, new { @class = "btn btn-success", @Style = "text-decoration:none" })*@
                    </td>
                </tr>
                slno++;
            }

        </table>
    </form>
</div>
