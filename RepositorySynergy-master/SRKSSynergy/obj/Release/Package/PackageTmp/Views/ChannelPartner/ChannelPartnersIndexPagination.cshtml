@model SRKSSynergy.Models.IndexViewModel

<html>
	<head>
		<title>Channel Partner Pagination</title>
    <link href="~/Content/bootstrap/css/bootstrap-3.0.0.min.css" rel="stylesheet" />
		@*<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">*@
	</head>
	<body>
		<div class="container">
			<div class="col-md-6 col-md-offset-3">
				<h1>Channel Partner Pagination</h1>

				<!-- items being paged -->
				<ul>
					@foreach (var item in Model.CPItems)
					{
						<li>@item.CPName</li>
					}
				</ul>				
				
				<!-- pager -->
				@if (Model.Pager.EndPage > 1)
				{
					<ul class="pagination">
						@if (Model.Pager.CurrentPage > 1)
						{
							<li>
								<a href="~/ChannelPartner/ChannelPartnersIndexPagination">First</a>
							</li>
							<li>
								<a href="~/ChannelPartner/ChannelPartnersIndexPagination?page=@(Model.Pager.CurrentPage - 1)">Previous</a>
							</li>
						}

						@for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
						{
							<li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
								<a href="~/ChannelPartner/ChannelPartnersIndexPagination?page=@page">@page</a>
							</li>
						}

						@if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
						{
							<li>
								<a href="~/ChannelPartner/ChannelPartnersIndexPagination?page=@(Model.Pager.CurrentPage + 1)">Next</a>
							</li>
							<li>
								<a href="~/ChannelPartner/ChannelPartnersIndexPagination?page=@(Model.Pager.TotalPages)">Last</a>
							</li>
						}
					</ul>
				}				
			</div>
		</div>
		<hr />
		
	</body>
</html>




