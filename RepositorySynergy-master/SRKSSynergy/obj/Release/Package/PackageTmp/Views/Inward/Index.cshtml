@helper sortLink(string name, int id)
{
    <a href="@Url.Action("Index", "Inward", new { sortby = id, isasc = (id == ViewBag.sortBy ? (!@ViewBag.isAsc).ToString().ToLower() : true) })">@name</a> 
    if (id == ViewBag.sortBy)
