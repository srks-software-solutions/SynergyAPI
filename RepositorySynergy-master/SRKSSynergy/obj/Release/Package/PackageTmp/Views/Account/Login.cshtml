<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Synergy - Login Form</title>
    <link href="~/Content/bootstrap/css/style.css" rel="stylesheet" />
    <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body>
    
    @model SRKSSynergy.Models.LoginModel
    @{
        Layout = null;
        ViewBag.Title = "Log in";
    }
    @if (ViewBag.Success)
    {
    <script>
        SuccessMsg();
        function SuccessMsg() {
            alert('The Password has been changed Successfully!!!!');
        }
    </script>
    }
    <section class="container">
        <div class="login">
            <h1>Login to SYNERGY</h1>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <p>
                    @*<input type="text" name="login" value="" placeholder="Username or Email">*@
                    @Html.TextBoxFor(m => m.UserName, new { @name = "login", Value = "", @placeholder = "Username" })
                </p>
                <p>
                    @Html.PasswordFor(m => m.Password, new { @name = "password", Value = "", @placeholder = "Password" })
                    @*<input type="password" name="password" value="" placeholder="Password">*@
                </p>
                <p class="submit">
                    <input type="submit" name="commit" value="Login">
                </p>
                <div class="login-help">
                    <p>Forgot your password? @Html.ActionLink("Click here to reset it","ForgotPassword","Account").</p>
                </div>
                <p style="font-size:16px;color:black;font-weight:700;font-family:Calibri;text-align:center">Works Best In Google Chrome</p>
            }
        </div>
    </section>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
