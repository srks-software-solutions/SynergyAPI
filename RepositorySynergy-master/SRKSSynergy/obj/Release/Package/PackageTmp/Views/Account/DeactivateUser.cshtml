@model  SRKSSynergy.Models.UserLogin

@{
	ViewBag.Title = "Deactivate Account";
}

<!-- glyphicons help -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

<div class="bcgr" id="mrefresh" style="min-height: 590px">
	@using (Html.BeginForm())
	{
		<div style="background: gray; padding-bottom: 15px">
			<p class="txtft">Deactivate User</p>
		</div>
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(false)
		@Html.HiddenFor(m => m.UserID)
		@Html.HiddenFor(m => m.FirstName)
	    @Html.HiddenFor(m => m.MiddleName)
	    @Html.HiddenFor(m => m.LastName)
	    @Html.HiddenFor(m => m.Isd1)
	    @Html.HiddenFor(m => m.Std1)
	    @Html.HiddenFor(m => m.PhoneNo)
	    @Html.HiddenFor(m => m.CPID)
	    @Html.HiddenFor(m => m.Answer)
	    @Html.HiddenFor(m => m.Designation)
	    @Html.HiddenFor(m => m.Username)
	    @Html.HiddenFor(m => m.email)

		@*<p class="txtft">Are you sure you want to Deactivate this?</p>*@
		<div class="row">
			<div class=" row show-grid">
				<div class="span12 pad">
					<p class="pad txtal" style="padding-bottom:30px">Are you sure you want to Deactivate this Account?</p>
					<div class="span3" style="padding-left:40px">
						<div class="control-group">
							<label class="control-label fntst">Contact Name:</label>
							<div class="controls">
								@Html.DisplayFor(model => model.ContactName)
							</div>
						</div>
					</div>
					<div class="span3">
						<div class="control-group">
							<label class="control-label fntst">User Name:</label>
							<div class="controls">
								@Html.DisplayFor(model => model.Username)
							</div>
						</div>
					</div>
					<div class="span3">
						<div class="control-group">
							<label class="control-label fntst">Email-ID:</label>
							<div class="controls">
								@Html.DisplayFor(model => model.email)
							</div>
						</div>
					</div>
				</div>
				@* Buttons *@
				<div class="row" style="padding-top: 20px; padding-left: 300px; padding-bottom: 20px">
					<div class=" row show-grid">
						<div class="span10">
							<div class="span3 cent1">
								<input type="submit" name="Yes" value="Yes" class="btn btn-large btn-danger" />
								<input type="submit" name="No" value="No" class="btn btn-large btn-success" />
							</div>
						</div>
					</div>
				</div>
				@* End of Buttons *@
			</div>
		</div>
	}
</div>
