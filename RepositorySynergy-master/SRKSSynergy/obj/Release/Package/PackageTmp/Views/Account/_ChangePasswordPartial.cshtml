<div class="bcgr" style="min-height:540px">
@model SRKSSynergy.Models.LocalPasswordModel


    @using (Html.BeginForm("Manage", "Account"))
    {
        <div style="background: gray; padding-bottom: 15px">
            <p class="txtft">Change Password</p>
        </div>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="row" style="padding-top:20px;padding-left:100px">
            <div class=" row show-grid">
                <div class="span10 pad">
                    <div class="span3">
                        <div class="control-group">
                            <label class="control-label fntst">Old Password</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.OldPassword, new { @id = "fname",@type="password", @class = "fntst", @placeholder = "Enter Old Password" })
                                @Html.ValidationMessageFor(m => m.OldPassword)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span10 pad">
                    <div class="span3">
                        <div class="control-group">
                            <label class="control-label fntst">New Password</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.NewPassword, new { @id = "fname",@type="password", @class = "fntst", @placeholder = "Enter New Password" })
                                @Html.ValidationMessageFor(m => m.NewPassword)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span10 pad">
                    <div class="span3">
                        <div class="control-group">
                            <label class="control-label fntst">Confirm Password</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @id = "fname",@type="password", @class = "fntst", @placeholder = "Enter Confirm Password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                    </div>
                </div>
                @*Buttons*@
                <div class="span10 pad " style="padding-bottom:20px">
                    <div class="span3">
                        <input type="submit" value="Change password" class="btn btn-large btn-success" />
                    </div>
                </div>
                @*End Of Buttons*@
            </div>
        </div>
    
    }
</div>
