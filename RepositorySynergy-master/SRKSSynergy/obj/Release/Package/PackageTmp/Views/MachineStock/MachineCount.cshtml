<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title - Synergy Application</title>
	@*<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />*@
	<meta name="viewport" content="width=device-width" />
	<link href="~/Content/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/css/MDB.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/css/jquery.ui.autocomplete.css" rel="stylesheet" />
	<script src="~/Content/bootstrap/js/jquery-1.9.1.js"></script>
	<script src="~/Content/bootstrap/js/jquery1.8.2.min.js"></script>
	@*<script src="~/Content/bootstrap/js/jQuery%20UI%201.9.2.js"></script>*@
	<script src="~/Content/bootstrap/js/jquery-ui-1.10.3.js"></script>
	<script src="~/Content/bootstrap/js/bootstrap.js"></script>
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>

	@model IList<SRKSSynergy.Models.ProductModel>

	@{
		Layout = null;
		ViewBag.Title = "Machine Count";
		//string qtno = null, cunam = null;
	}
	<input type="text" id="success" value="false" style="display: none;" />
	<form action="@Url.Action("MachineCount", "MachineStock")" method="get">
		<div style="background: #e5e5e5; min-height: 200px;min-width:700px">
			<div style="background: gray; padding-bottom: 15px">
				<p class="txtft">Machine Stock View</p>
			</div>
			<div id="getquotations">
			<table class="table table-striped" style="width: 700px">
				@* header *@
				<tr align="center">
					<th align="center" style="width: 50px; text-align: center">Serial No</th>
					<th align="center" style="width: 100px; text-align: center">Machine Type</th>
					<th align="center" style="width: 100px; text-align: center">InStock</th>
                    <th align="center" style="width: 100px; text-align: center">Order Approved</th>
					<th align="center" style="width: 100px; text-align: center">PR</th>
				</tr>
				@{int i = 1;
				  int slno = 1;}
				@foreach (var p in Model)
				{    
					<tr>
						<td align="center" style="width: 50px; text-align: center">@slno</td>
						<td align="center" style="width: 100px; text-align: center">@p.ProductModelName</td>
						<td align="center" style="width: 100px; text-align: center">
							
                            @p.MachineCount
						</td>
                        <td align="center" style="width: 100px; text-align: center">
							
                            @p.ApprovedCount
						</td>
                        <td align="center" style="width: 100px; text-align: center">
							
                            @p.PR
						</td>
					</tr>
							slno++;
				}

			</table>
		</div>

		</div>
	</form>
	
</body>
</html>
