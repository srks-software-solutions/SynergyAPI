@model  SRKSSynergy.Models.ProductModelSpare
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<div class="bcgr" id="mrefresh" style="min-height: 590px">
	@using (Html.BeginForm())
	{
		<div style="background: gray; padding-bottom: 15px">
			<p class="txtft">Delete RC Single Machine Enquiry</p>
		</div>
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(false)
		
		@*<p class="txtft">Are you sure you want to Deactivate this?</p>*@
		<div class="row">
			<div class=" row show-grid">
				<div class="span12 pad">
					<p class="pad txtal" style="padding-bottom:30px">Are you sure you want to Delete?</p>
					<div class="span3" style="padding-left:40px">
						<div class="control-group">
							<label class="control-label fntst"><strong>Spare Part Model Name:</strong></label>
							<div class="controls">
								@Html.DisplayFor(model => model.ProductModelSparesName)
							</div>
						</div>
					</div>
					<div class="span3">
						<div class="control-group">
							<label class="control-label fntst"><strong>Spare Part Description:</strong></label>
							<div class="controls">
								@Html.DisplayFor(model => model.ProductModelSparesDesc)
							</div>
						</div>
					</div>
					</div>
				@* Buttons *@
				<div class="row" style="padding-top: 20px; padding-left: 300px; padding-bottom: 20px">
					<div class=" row show-grid">
						<div class="span10">
							<div class="span3 cent1">
								<input type="submit" name="Yes" value="Yes" class="btn btn-danger" />
								<input type="submit" name="No" value="No" class="btn btn-success" />
							</div>
						</div>
					</div>
				</div>
				@* End of Buttons *@
			</div>
		</div>
	}
</div>

