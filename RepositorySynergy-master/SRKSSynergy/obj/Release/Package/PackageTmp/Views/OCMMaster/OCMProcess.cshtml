                            }
                        }
                    });

                    return true;
                }
            }
            function delgtyp(val) {
                var id = $(val).attr('id');
                id = id.split(' ');
                var gid = id[0];
                $("#hdn_id").val(gid);
                $("#add").hide();
                $("#update").show();


