                            }
                            else {
                                alert(xhr.status);
                                alert(thrownError);
                            }
                        }
                    });

                    return true;
                }

            }
            function editgtyp(val) {

                var id = $(val).attr('id');
                id = id.split(' ');
                var gid = id[0];
                $("#hdn_id").val(gid);
                $("#add").hide();
                $("#update").show();
                $('#myModal').modal('show');

                var data = {};
                data.pid = gid;
                $.ajax({
                    url: '/OCMMaster/OCMProcessShow',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    // dataType: 'json',
                    success: function (data) {
                        var res = data.split("%");

                        $("#gname").val(res[0]);
                        $("#gsname").val(res[1]);
                        $("#gid").val(res[2]);

                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        //On error do this
                        if (xhr.status == 200) {

                            alert(ajaxOptions);
                        }
                        else {
                            alert(xhr.status);
                            alert(thrownError);
                        }
                    }
                });
                return false;
            }
            function updategtyp() {
                $("#add").show();
                $("#update").hide();
                var pid = $("#hdn_id").val();
                var gname = $("#gname").val();
                var gsname = $("#gsname").val();
                var gid = $("#gid").val();

                if (gname == "") {
