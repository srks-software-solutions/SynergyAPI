                    myFunction();
                    return false;
                }
                else {
                    $("#close").click();
                    var data = {};
                    data.pid = pid;
                    data.gid = gid;
                    data.pname = gname;
                    data.psname = gsname;
                    $.ajax({
                        url: '/OCMMaster/OCMProcessUpdate',
