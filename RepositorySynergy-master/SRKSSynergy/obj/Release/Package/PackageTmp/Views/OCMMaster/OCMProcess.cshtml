                $("#update").hide();
                $("#gname").val('');
                $("#gsname").val('');
                $("#gid").val(0);
            }
            function addgtyp() {
                $("#add").show();
                $("#update").hide();
                var gname = $("#gname").val();
                var gsname = $("#gsname").val();
                var gid = $("#gid").val();

                if (gname == "") {
                    alert('Please fill all the feilds');
                    myFunction();
                    return false;
                }
                else {
                    $("#close").click();
                    var data = {};
                    data.pname = gname;
                    data.psname = gsname;
                    data.gid = gid;
